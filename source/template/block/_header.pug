- var menu = ['О компании', 'Продукция', 'Благотворительность', 'Пресс-центр', 'Кулинарный клуб', 'Контакты']
-
	var language = [
		{
			languageName: 'Рус',
			languageClass: 'active'
		},{
			languageName: 'Eng',
			languageClass: ''
		}
	]
nav.menu__nav.menu__mobile
	ul.menu__list.d-flex
		each item in menu
			li.menu__item
				a.menu__link(href='#')= item
	ul.language-toggle.d-flex
		each item in language
			li.language-toggle__item
				a.language-toggle__link(href='#' class=`language-toggle__link-${item.languageClass}`)= item.languageName
header.header
	.container-fluid
		.row
			.col-lg-12.d-flex
				a(href='/index.html').logo__link
					img(src='./templates/images/logo.png' alt='logo').logo__img
				nav.menu__nav
					ul.menu__list.d-flex
						each item in menu
							li.menu__item
								a.menu__link(href='#')= item
					ul.language-toggle.d-flex
						each item in language
							li.language-toggle__item
								a.language-toggle__link(href='#' class=`language-toggle__link-${item.languageClass}`)= item.languageName
				a.menu__btn(href='#')
					span.menu__btn__line
				.search
					img(src='./templates/images/search.png' alt='search-icon').search__icon
					input(type='text').search__input
